<?xml version='1.0' encoding='utf-8'?>
<widget id="yaoswa.inglebard" version="1.2.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>YAOSWA</name>
    <description>
        Yet another open source weather application.
    </description>
    <author email="davidricq87@orange.fr" href="https://github.com/Inglebard/YAOSWA">
        David 'Inglebard' RICQ
    </author>
    <icon src="www/img/logo.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist"/>
    <plugin name="cordova-plugin-globalization" />
    <plugin name="cordova-plugin-geolocation" />      
    <plugin name="cordova-plugin-inappbrowser" />       
    <plugin name="cordova-plugin-file" />    
    
    <access origin="http://api.openweathermap.org/" />
    <access origin="https://cordova.apache.org/'" />
    <access origin="http://openweathermap.org/" />
    <access origin="https://angularjs.org/" />
    <access origin="https://github.com/Inglebard/YAOSWA/" />
    <access origin="https://opensource.org/licenses/GPL-2.0/" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
